                    <TextBlock Text="Фамилия: Киперман" FontSize="15"  Margin="100,30,50,20"/>
                    <TextBlock Text="Имя: Денис" FontSize="15"  Margin="100,45,50,20"/>
                    <Image  Height="90" Source="Resources/123.jpg" Margin="0,0,250,0"/>
                </Grid>

                <Button x:Name="catalog" Click="Button_Catalog_Click" Content="Каталог" Margin="0, 105, 0,0" Background="Black"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

